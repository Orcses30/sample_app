<div>
  <%= link_to edit_book_path(@book), class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-edit"></span> Edit
  <% end %>

  <%= link_to book_path(@book), method: :delete,
      data: { confirm: "You sure?" }, class: "btn btn-default" do %>
      <span class="glyphicon glyphicon-trash"></span> Delete
  <% end %>
</div>

<div>
<table class="pretty">
  <tr>
    <th><%= @book.number %></th>
    <th><%= @book.description %></th>
  </tr>
  <% @book.questions.each do |b| %>
    <tr>
      <td><%= b.book_id %></td>
      <td><%= b.question %></td>
    </tr>
  <% end %>
</table>
</div>
