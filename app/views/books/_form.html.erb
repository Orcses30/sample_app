<%= form_for @book do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :number %>
  <%= f.number_field :number, class: 'form-control' %>

  <%= f.label :description %>
  <%= f.text_field :description, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "bnt btn-primary" %>
<% end %>
